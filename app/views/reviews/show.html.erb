<h2> My Reviews </h2>

      <h2>All of the reviews by company </h2>
      <table>
          <% @company.reviews.each do |review| %>
            <th> review.user.username %>: </th>
            <tr>
              <td>
                <%=review.content%>
                <% if logged_in && review.user_id == current_user.id %>
                  <p>
                    <%= link_to "Edit Review", edit_company_review_path(@company, review) %>
                    <%= link_to "Delete Review", company_review_path(@company, review, method: :delete) %>
                      </p>
                    <% end %>
                  <% end %>
                </td>
              </tr>
          </table>

          <% if logged_in && @user == current_user %>
              <p>
                <%= link_to "My Account", user %>
                <%= link_to "My Reviews", review_path(current_user.review) %>
            <% end %>
