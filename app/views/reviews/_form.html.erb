<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@review.errors.count, "error") %>
      prohibited this post from being saved:
    </h2>

    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@company, @review]) do |f| %>
    <p>
      <%= f.label :company, "Company Name:" %>
      <%= f.text_field :company %>
      <br></br>
      <%= f.label :size, "Company Size:" %>
      <%= f.number_field :size %>
      <br></br>
      <%= f.label :salary, "Your Salary:" %>
      <%= f.number_field :salary %>
      <br></br>
      <%= f.label :women_exec_roles, "Are there women in leadership positions?" %>
      <%= f.boolean :women_exec_roles %>
      <br></br>
      <%= f.label :promo_opps, "Are there opportunities for promotion for women?" %>
      <%= f.boolean :promo_opps %>
      <br></br>
      <%= f.label :recommend, "Would you recommend this company to another a female friend?" %>
      <%= f.boolean :recommend %>
      <br></br>
      <%= f.label :job_rating, "What is your overall job satisfaction rating?" %>
      <%= f.number_field :job_rating %>
      <br></br>
      <%= f.label :content, "Any other details about the company (i.e. Maternity leave, remote work flexibility, company wide training etc.)" %>
      <%= f.text_area :content %>
    <%= f.submit %></p>
<% end %>
